generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  relPatientCare RelPatientCare[]
  actionLogs ActionLogs[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

model Patient {
  id        String   @id @default(cuid())
  name      String
  phones    ContactPatient[]
  document  String   @unique
  email     String   @unique
  gender    Gender
  birthdate DateTime
  insuranceCardNumber String
  relPatientCare RelPatientCare[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

model ContactPatient {
  id        String   @id @default(cuid())
  phone     String
  patient   Patient  @relation(fields: [patientId], references: [id])
  patientId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

model PatientCare {
  id        String   @id @default(cuid())
  description String
  relPatientCare RelPatientCare?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

model RelPatientCare {
  id        String   @id @default(cuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  patient   Patient    @relation(fields: [patientId], references: [id])
  patientId String
  patientCare PatientCare @relation(fields: [patientCareId], references: [id])
  patientCareId String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

model ActionLogs {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  tableName String
  tableId   String
  action    Action
  modifiedFields String[]
  createdAt DateTime @default(now())
}

enum Gender {
  M
  F
}

enum Action {
  UPDATE
  DELETE
}

enum TableName {
  USER
  PATIENT
  CONTACT_PATIENT
  PATIENT_CARE
  REL_PATIENT_CARE
}
