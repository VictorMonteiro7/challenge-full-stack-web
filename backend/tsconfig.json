{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@prisma/*": ["./prisma/*"],
      "@types/*": ["./types/*"],
    }
  },
}
